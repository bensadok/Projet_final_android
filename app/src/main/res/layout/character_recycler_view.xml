<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/character_imageview"
            android:layout_width="69dp"
            android:layout_height="95dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/borderlands" />

        <ImageButton
            android:id="@+id/character_img_btn_character"
            android:layout_width="390dp"
            android:layout_height="111dp"
            android:background="@drawable/gradient_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/character_nom_textView"
            android:layout_width="285dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Nom"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/character_imageview"
            app:layout_constraintTop_toTopOf="@+id/character_imageview" />

        <TextView
            android:id="@+id/role_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Role"
            app:layout_constraintStart_toStartOf="@+id/character_nom_textView"
            app:layout_constraintTop_toBottomOf="@+id/character_nom_textView" />

        <TextView
            android:id="@+id/doubleur_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Doubleur"
            app:layout_constraintStart_toStartOf="@+id/character_nom_textView"
            app:layout_constraintTop_toBottomOf="@+id/character_nom_textView" />

        <ImageView
            android:id="@+id/doubleur_imageview"
            android:layout_width="44dp"
            android:layout_height="54dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toEndOf="@+id/doubleur_textView"
            app:layout_constraintTop_toBottomOf="@+id/character_nom_textView"
            tools:srcCompat="@drawable/borderlands" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>