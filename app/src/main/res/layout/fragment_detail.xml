<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="390dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statut_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/affiche_imageview"
            app:layout_constraintTop_toTopOf="@+id/affiche_imageview" />

        <TextView
            android:id="@+id/rank_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/statut_textView"
            app:layout_constraintTop_toTopOf="@+id/statut_textView" />

        <ImageView
            android:id="@+id/affiche_imageview"
            android:layout_width="132dp"
            android:layout_height="193dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_textview"
            tools:srcCompat="@drawable/borderlands" />

        <TextView
            android:id="@+id/synopsis_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:justificationMode="inter_word"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_synopsis" />

        <Button
            android:id="@+id/button_synopsis"
            android:layout_width="159dp"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:text="Display synopsis "
            app:layout_constraintStart_toStartOf="@+id/affiche_imageview"
            app:layout_constraintTop_toBottomOf="@+id/affiche_imageview" />

        <TextView
            android:id="@+id/nb_episode_textView"
            android:layout_width="149dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/rank_textView"
            app:layout_constraintStart_toEndOf="@+id/rank_textView" />

        <TextView
            android:id="@+id/downloading_detail"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/synopsis_textView"
            app:layout_constraintStart_toStartOf="@+id/synopsis_textView"
            app:layout_constraintTop_toBottomOf="@+id/synopsis_textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>