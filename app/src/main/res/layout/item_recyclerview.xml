<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <ImageView
            android:id="@+id/icon_imageview"
            android:layout_width="69dp"
            android:layout_height="95dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/borderlands" />

        <ImageButton
            android:id="@+id/img_btn"
            android:layout_width="393dp"
            android:layout_height="120dp"
            android:background="@drawable/gradient_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nom_textView"
            android:layout_width="287dp"
            android:layout_height="26dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Nom"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/icon_imageview"
            app:layout_constraintTop_toTopOf="@+id/icon_imageview" />

        <TextView
            android:id="@+id/date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:text="Date"
            app:layout_constraintStart_toStartOf="@+id/nom_textView"
            app:layout_constraintTop_toBottomOf="@+id/nom_textView" />

        <TextView
            android:id="@+id/note_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:text="Note"
            app:layout_constraintStart_toEndOf="@+id/date_textView"
            app:layout_constraintTop_toTopOf="@+id/date_textView" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
