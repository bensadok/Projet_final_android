<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:background="@color/colorPrimaryDark">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/icon_imageview"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/borderlands" />

        <ImageButton
            android:id="@+id/img_btn"
            android:layout_width="392dp"
            android:layout_height="91dp"
            android:background="@drawable/gradient_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nom_textView"
            android:layout_width="96dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:text="Nom"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/icon_imageview"
            app:layout_constraintTop_toTopOf="@+id/icon_imageview" />

        <TextView
            android:id="@+id/date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Date"
            app:layout_constraintStart_toStartOf="@+id/nom_textView"
            app:layout_constraintTop_toBottomOf="@+id/nom_textView" />

        <TextView
            android:id="@+id/note_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="30dp"
            android:text="Note"
            app:layout_constraintStart_toEndOf="@+id/nom_textView"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
